@import '../../base'
.global-header
    position relative
    z-index 11
    border none
    box-shadow none
    .title
        color #000000
        width 70%
        margin 0 auto
        left 50%
        transform translate3d(-50%, 0, 0)
        overflow hidden
        text-overflow ellipsis
        padding-top: 3px
        img
            width: 75px
    .icon-bars
        color #fff
    .nav-icon, .icon-bars
        position relative
        z-index 20
        font-size 28px
        color #fff
        display inline-block
        height 44px
        line-height 44px
        padding 0
