@import '../../base'
.index
    .container
        padding 10px
        padding-bottom 0
    .project-filters
        width 100%
        background #fff
        display table
        overflow hidden
        padding 15px 0
        .filter-item
            display table-cell
            line-height 1
            text-align center
            border-right 1px solid border
            color #666
            width 25%
            &:last-child
                border none
            &.selected
                color cblue
    .entrance
        position: fixed
        right: 0
        top: 50%
        text-align: center
        padding: 8px 10px 0px
        background-color: #000
        color: #fff
        opacity: 0.7
        border-radius: 5px
        span.iconfont
            font-size: 30px
        p
            margin-bottom: 0
            color: #fff
