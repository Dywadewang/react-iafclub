.file-input
    position relative
    overflow hidden
    float left
    margin-bottom 20px
    label
        float left
        margin-bottom 5px
    input
        position absolute
        font-size 100px
        left 0
        top 0
        z-index 9
        opacity 0
    .icon-plus
        font-size 30px
        padding 15px
        border 1px dashed #d2d2d2
.file-tip
    color #d2d2d2
    float left
    margin-top 20px
    width 230px
    word-break break-word
