@import '../../app/base'
.pop-modal
    position fixed
    top 0
    left 0
    right 0
    bottom 0
    z-index 20
    width 100%
    transform translate3d(0, -100%, 0)
    opacity 0
    &.visible
        transform translate3d(0, 0, 0)
        opacity 1
        .modal-container
            transform translate3d(0, 0, 0)
    .mask
        position absolute
        top 0
        left 0
        right 0
        bottom 0
        width 100%
        background rgba(0, 0, 0, .7)
        z-index -1
    .modal-container
        margin 50px 10px
        transform translate3d(0, -100%, 0)
        transition transform .3s
    .modal-content
        background rgba(255, 255, 255, .9)
        box-shadow 0 0 20px 1px rgba(0, 0, 0, .8)
        border-radius 4px
        padding 15px
    .modal-title
        text-align center
        font-size 14px
        color #333
        margin 8px 0 15px