@import '../../app/base'
.loading-spinner
    position: fixed;
    top 30%
    left 50%
    transform translate3d(-50%, 0, 0)
    z-index 20

    .loading-bar 
        display inline-block
        width 4px
        height 18px
        border-radius 4px
        margin-right 5px
        animation loading 1s ease-in-out infinite
    
    .bar0
        background-color #3498db
        animation-delay 0
        
    .bar1
        background-color #c0392b
        animation-delay 0.09s

    .bar2
        background-color #f1c40f
        animation-delay .18s
        
    .bar3
        background-color #27ae60
        animation-delay .27s

@keyframes loading 
    0%
        transform scale(1)
    20%
        transform scale(1, 1.5)
    40%
        transform scale(1)
