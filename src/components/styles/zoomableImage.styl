.zoomable-image
    position fixed
    z-index 22
    height 100%
    min-width 100%
    overflow auto
    left 0
    top 0
    bottom 0
    display none
    text-align center
    &.show
        display block
    .mask
        position absolute
        top 0
        left 0
        right 0
        bottom 0
        z-index -1
        background rgba(0, 0, 0, 1)
    .image-wrapper
        position absolute
        top 50%
        left 50%
        transform translate3d(-50%, -50%, 0)
        width 100%
    .image-container
        position relative
        width 100%
    img 
        max-width 100%        