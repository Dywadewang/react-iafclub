@import '../../app/base'
.global-message
    position fixed
    top 50%
    left 50%
    transform translate3d(-50%, -50%, 0) scale(0)
    transition transform .3s, opacity .5s 
    opacity 0
    background rgba(0, 0, 0, .6)
    white-space nowrap
    padding 15px 20px
    color #fff
    border-radius 4px
    &.visible
        transform translate3d(-50%, -50%, 0) scale(1)
        opacity 1
        z-index 30